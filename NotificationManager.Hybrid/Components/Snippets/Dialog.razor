@if (Opened)
{
    <div class="overlay">
        <div class="dialog">
            <div class="dialog-header">
                <div class="dialog-title">@Title</div>
                <div>
                    <div class="close" @onclick="CloseDialog">
                        <img style="height:30px;" src="svg/close-svgrepo-com.svg" />
                    </div>
                </div>
            </div>

            <div class="dialog-body mt-4">
                @BodyContent
            </div>

            <div class="dialog-footer">
                @FooterContent
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public string? Title { get; set; }
    [Parameter] public RenderFragment? BodyContent { get; set; }
    [Parameter] public RenderFragment? FooterContent { get; set; }
    [Parameter] public bool Opened { get; set; }
    [Parameter] public EventCallback CloseButtonClicked { get; set; }

    private void CloseDialog()
    {
        Opened = false;
        CloseButtonClicked.InvokeAsync();
    }
}
